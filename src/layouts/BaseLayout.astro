---
import Header from '../components/Header.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description || title} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <title>{title}</title>
    <style is:global>
      :root {
        /* Новая цветовая палитра - персиково-терракотовая */
        --color-bg: #FFF5E9;
        --color-bg-panel: #FFFFFF;
        --color-accent-1: #FFCEB6;
        --color-accent-2: #F3A48B;
        --color-accent-3: #D66F5F;
        --color-text: #2A2A2A;
        --color-text-muted: #666666;
        --color-border: rgba(214, 111, 95, 0.2);
        
        /* Типографика - чёткая шкала */
        --font-size-xs: 14px;
        --font-size-sm: 16px;
        --font-size-base: 18px;
        --font-size-lg: 20px;
        --font-size-xl: 24px;
        --font-size-2xl: 32px;
        --font-size-3xl: 48px;
        
        /* Отступы - вертикальный ритм */
        --spacing-xs: 16px;
        --spacing-sm: 24px;
        --spacing-md: 32px;
        --spacing-lg: 64px;
        --spacing-xl: 80px;
        
        /* Радиусы */
        --radius-sm: 4px;
        --radius-md: 6px;
        
        /* Переходы */
        --transition-base: 0.2s ease;
        --transition-slow: 0.3s ease;
      }

      html {
        scroll-behavior: smooth;
        margin: 0;
        padding: 0;
      }

      /* Новая типографика - Inter */
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        font-size: var(--font-size-base);
        line-height: 1.5;
        color: var(--color-text);
        background: var(--color-bg);
        margin: 0;
        padding: 0;
      }

      /* Заголовки */
      h1 {
        font-size: var(--font-size-3xl);
        font-weight: 800;
        line-height: 1.1;
        letter-spacing: -0.02em;
        color: var(--color-text);
        margin: 0 0 var(--spacing-sm) 0;
      }

      h2 {
        font-size: var(--font-size-2xl);
        font-weight: 700;
        line-height: 1.2;
        letter-spacing: -0.01em;
        color: var(--color-text);
        margin: 0 0 var(--spacing-sm) 0;
      }

      h3 {
        font-size: var(--font-size-xl);
        font-weight: 600;
        line-height: 1.3;
        color: var(--color-text);
        margin: 0 0 var(--spacing-xs) 0;
      }

      p {
        font-size: var(--font-size-base);
        line-height: 1.5;
        color: var(--color-text);
        margin: 0 0 var(--spacing-xs) 0;
      }

      /* Анимации */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Анимации появления для блоков */
      .section-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }

      .section-animate.visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* Fallback для мобильных: показываем элементы сразу, если JS не сработал */
      @media (max-width: 768px) {
        .section-animate {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .card-animate {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease-out, transform 0.5s ease-out;
      }

      .card-animate.visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* Задержки для последовательного появления */
      .landing-grid2 .card-animate:nth-child(1) { transition-delay: 0ms; }
      .landing-grid2 .card-animate:nth-child(2) { transition-delay: 150ms; }
      .landing-grid2 .card-animate:nth-child(3) { transition-delay: 300ms; }
      .landing-grid2 .card-animate:nth-child(4) { transition-delay: 450ms; }

      .services-principles .card-animate:nth-child(1) { transition-delay: 0ms; }
      .services-principles .card-animate:nth-child(2) { transition-delay: 150ms; }
      .services-principles .card-animate:nth-child(3) { transition-delay: 300ms; }
      .services-principles .card-animate:nth-child(4) { transition-delay: 450ms; }

      /* Фоновая анимация для кнопок */
      .cta-primary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
      }

      .cta-primary:hover::before {
        left: 100%;
      }

      /* Компоненты - новые CTA кнопки */
      .cta-primary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2rem;
        border-radius: var(--radius-md);
        background: var(--color-accent-3) !important;
        color: #ffffff !important;
        text-decoration: none !important;
        font-weight: 600;
        font-size: var(--font-size-lg);
        transition: all var(--transition-base);
        border: none;
        cursor: pointer;
        position: relative;
        overflow: hidden;
      }

      .cta-primary:hover {
        background: #C45A4A !important;
        transform: translateY(-2px);
      }

      .cta-primary:active {
        transform: translateY(0);
      }

      .cta-secondary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2rem;
        border-radius: var(--radius-md);
        background: transparent;
        color: var(--color-text);
        text-decoration: none;
        font-weight: 500;
        font-size: var(--font-size-base);
        transition: all var(--transition-base);
        border: 1.5px solid var(--color-accent-3);
      }

      .cta-secondary:hover {
        background: var(--color-accent-3);
        color: #ffffff;
      }

      /* Карточки - новый стиль */
      .card {
        background: var(--color-bg-panel);
        border-radius: var(--radius-md);
        padding: var(--spacing-md);
        transition: all var(--transition-base);
        border: 1px solid transparent;
      }

      .card:hover {
        border-color: var(--color-accent-1);
        transform: translateY(-2px);
      }

      /* Ссылки с анимированным underline */
      a:not(.cta-primary):not(.cta-secondary):not(.site-header__link):not(.site-footer a) {
        color: var(--color-text);
        text-decoration: none;
        background-image: linear-gradient(to right, var(--color-accent-3) 0%, var(--color-accent-3) 100%);
        background-size: 0% 2px;
        background-position: 0% 100%;
        background-repeat: no-repeat;
        transition: background-size 0.3s ease, color 0.2s ease;
      }

      /* Подчеркивание для ссылок в параграфах */
      p a:not(.cta-primary):not(.cta-secondary) {
        text-decoration: underline;
        text-decoration-color: rgba(0, 0, 0, 0.2);
        text-underline-offset: 3px;
        transition: color 0.2s ease, text-decoration-color 0.2s ease;
      }

      p a:not(.cta-primary):not(.cta-secondary):hover {
        color: #D66F5F;
        text-decoration-color: #D66F5F;
      }

      /* Ссылки в списках - вариант Г (исключаем футер) */
      li a:not(.cta-primary):not(.cta-secondary):not(.site-footer a),
      ul a:not(.cta-primary):not(.cta-secondary):not(.site-footer a),
      ol a:not(.cta-primary):not(.cta-secondary):not(.site-footer a) {
        color: #4B5563;
        text-decoration: underline;
        text-decoration-color: #D66F5F;
        text-decoration-thickness: 1px;
        text-underline-offset: 3px;
        transition: color 0.2s ease, text-decoration-thickness 0.2s ease;
      }

      li a:not(.cta-primary):not(.cta-secondary):not(.site-footer a):hover,
      ul a:not(.cta-primary):not(.cta-secondary):not(.site-footer a):hover,
      ol a:not(.cta-primary):not(.cta-secondary):not(.site-footer a):hover {
        color: #D66F5F;
        text-decoration-thickness: 2px;
      }

      /* ›› только для ссылок НЕ в списках и НЕ в хедере */
      a:not(.cta-primary):not(.cta-secondary):not(.site-header__link):not(.site-header__logo):not(.site-footer a):not(li a):not(ul a):not(ol a)::after {
        content: '››';
        display: inline-block;
        margin-left: 0.15rem;
        font-size: 0.9em;
        color: currentColor;
        vertical-align: baseline;
        transition: transform 0.2s ease, color 0.2s ease;
        opacity: 0.6;
      }

      a:not(.cta-primary):not(.cta-secondary):not(.site-header__link):not(.site-footer a):hover {
        color: var(--color-accent-3);
        background-size: 100% 2px;
      }

      a:not(.cta-primary):not(.cta-secondary):not(.site-header__link):not(.site-header__logo):not(.site-footer a):not(li a):not(ul a):not(ol a):hover::after {
        transform: translateX(3px);
        opacity: 1;
      }

      /* Визуальные разделители для секций */
      .section-divider {
        height: 1px;
        background: linear-gradient(to right, transparent, var(--color-border), transparent);
        margin: 3rem 0;
        border: none;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
      }

      /* Кнопка "Наверх" */
      .back-to-top {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: var(--color-accent-3);
        color: #fff;
        border: none;
        cursor: pointer;
        display: none;
        align-items: center;
        justify-content: center;
        transition: all var(--transition-base);
        z-index: 100;
        opacity: 0;
        transform: translateY(20px);
      }

      .back-to-top.visible {
        display: flex;
        opacity: 1;
        transform: translateY(0);
      }

      .back-to-top:hover {
        transform: translateY(-4px);
        background: #C45A4A;
      }

      .back-to-top svg {
        width: 20px;
        height: 20px;
      }

      /* CTA блок с персиковым фоном */
      .cta-block {
        background: linear-gradient(135deg, var(--color-accent-1) 0%, var(--color-accent-2) 100%);
        padding: var(--spacing-xl) var(--spacing-md);
        border-radius: var(--radius-md);
        text-align: center;
        color: var(--color-text);
      }

      .cta-block h2 {
        color: var(--color-text);
        margin-bottom: var(--spacing-sm);
      }

      .cta-block p {
        font-size: var(--font-size-lg);
        margin-bottom: var(--spacing-md);
        color: var(--color-text);
      }

      /* Мобильные оптимизации */
      @media (max-width: 768px) {
        /* Уменьшаем базовый шрифт */
        body {
          font-size: 16px;
        }

        /* Уменьшаем заголовки */
        h1 {
          font-size: 2rem;
          line-height: 1.2;
        }

        h2 {
          font-size: 1.5rem;
          line-height: 1.3;
        }

        h3 {
          font-size: 1.25rem;
        }

        /* Увеличиваем touch targets для кнопок (минимум 44x44px) */
        .cta-primary {
          padding: 0.875rem 1.5rem;
          min-height: 44px;
          font-size: 1rem;
        }

        .cta-secondary {
          padding: 0.875rem 1.5rem;
          min-height: 44px;
          font-size: 1rem;
        }

        /* Упрощаем анимации на мобильных */
        .section-animate {
          transition: opacity 0.3s ease-out;
        }

        .card-animate {
          transition: opacity 0.3s ease-out;
        }

        /* Отключаем hover эффекты на мобильных */
        .cta-primary:hover {
          transform: none;
        }

        /* Делаем ссылки очевидными ТОЛЬКО внутри текста на мобильных */
        /* Ссылки в параграфах */
        p a:not(.cta-primary):not(.cta-secondary):not(.services-nav__item):not(.site-header__link) {
          text-decoration: underline !important;
          text-decoration-color: #D66F5F !important;
          text-decoration-thickness: 1.5px !important;
        }

        /* Ссылки в списках внутри контента (НЕ навигация) */
        .landing-content li a:not(.cta-primary):not(.cta-secondary),
        .service-section li a:not(.cta-primary):not(.cta-secondary) {
          text-decoration: underline !important;
          text-decoration-color: #D66F5F !important;
          text-decoration-thickness: 1.5px !important;
        }
        
        /* Убираем подчёркивания у всей навигации */
        .services-nav__item,
        .site-header__link,
        .site-header__cta {
          text-decoration: none !important;
        }
      }

      /* Предотвращаем горизонтальный скролл */
      html, body {
        overflow-x: hidden;
        max-width: 100%;
      }

    </style>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
